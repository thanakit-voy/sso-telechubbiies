# Portal Telechubbiies Backend Configuration

# Application
APP_NAME=Portal Telechubbiies
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/telechubbiies
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Security
SECRET_KEY=change-this-to-a-super-secret-key-min-32-characters-long

# JWT Settings (RS256)
# Option 1: Provide key file paths
# JWT_PRIVATE_KEY_PATH=/path/to/private.pem
# JWT_PUBLIC_KEY_PATH=/path/to/public.pem

# Option 2: Provide keys directly (base64 encoded)
# JWT_PRIVATE_KEY=...
# JWT_PUBLIC_KEY=...

# Token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# SMTP (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Telechubbiies SSO
SMTP_FROM_EMAIL=noreply@telechubbiies.com
SMTP_USE_TLS=true

# Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880

# Invitation
INVITATION_EXPIRE_HOURS=48

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS
CORS_ORIGINS_STR=http://localhost:3000
